if [[ ! $DISPLAY && -S "/tmp/.X11-unix/X0" ]]; then
    export DISPLAY=:0.0
    if [[ $XDG_VTNR -eq 2 ]]; then
        exec /usr/bin/start-ubuntu-desktop.sh
    fi
fi
